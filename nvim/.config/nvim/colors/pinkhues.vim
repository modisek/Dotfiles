"Name: Pink Hues
" Description: A simple NVIM theme with pink hues
" Author: ChatGPT

" Set the background color
set background=dark
" Set the color scheme
colorscheme default

" Set the highlighting for the different syntax groups
highlight Normal        guifg=#dcdcdc guibg=#1e1e1e
highlight Comment       guifg=#ff99cc
highlight Constant      guifg=#bda0cb
highlight Identifier    guifg=#c8a0d1
highlight Statement     guifg=#ffbbff
highlight PreProc       guifg=#ff9999
highlight Type          guifg=#e60073
highlight Special       guifg=#ffb3b3
highlight Underlined    guifg=#ff80bf gui=underline
highlight Todo          guifg=#ff80bf guibg=#1e1e1e

" Set the highlighting for specific elements
highlight LineNr        guifg=#dcdcdc guibg=#1e1e1e
highlight CursorLineNr  guifg=#ff80bf guibg=#1e1e1e
highlight CursorLine    guibg=#2d2d2d
highlight Search        guibg=#ff80bf guifg=#1e1e1e
highlight Visual        guibg=#38383
